{
  "name": "oldies-workers-server",
  "version": "1.0.0",
  "type": "module",
  "imports": {
    "@shared/*": "./dist/shared/*",
    "@server/*": "./dist/server/*"
  },
  "scripts": {
    "dev": "node node_modules/tsx/dist/cli.mjs watch server/index.ts",
    "dev:simple": "node node_modules/tsx/dist/cli.mjs server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "db:generate": "node node_modules/drizzle-kit/bin.cjs generate",
    "db:push": "node node_modules/drizzle-kit/bin.cjs push --force",
    "db:studio": "node node_modules/drizzle-kit/bin.cjs studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.6",
    "express": "^4.18.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.24",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
