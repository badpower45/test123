modules = ["web", "cpp-clang14", "python-3.12", "nodejs-20"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web Server"

[[workflows.workflow]]
name = "Flutter Web Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "$HOME/.pub-cache/bin/dhttpd --host 0.0.0.0 --port 5000 --path build/web"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45133
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["dhttpd", "--host", "0.0.0.0", "--port", "5000", "--path", "build/web"]
build = ["flutter", "build", "web", "--release"]
